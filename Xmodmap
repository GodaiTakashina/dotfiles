! keycode  66 Caps_Lock -> Control_L
! keycode  37 Control_L -> Caps_Lock
! keycode 100 Henkan_Mode -> Control_R
! keycode 101 Hiragana_Katakana -> Alt_R
! keycode 102 Muhenkan -> Escape

clear Lock
remove Control = Control_L
keycode 37 = Caps_Lock
keycode 66 = Control_L
keycode 100 = Control_R
keycode 101 = Alt_R
keycode 102 = Escape
add Lock = Caps_Lock
add Control = Control_L
